<!DOCTYPE html>
<html>
    <head>
    <title><%= @user_detail.userName %>'s Profile</title>

    </head>
    <body>

        <div>
            <img src="<%= @user_detail.profile_photo_url %>" alt="Profile Photo" width="150" height="150">

            <h2><%= @user_detail.userName %></h2>

            <%= link_to 'Edit Profile', edit_user_path(@user) %>

            <p><strong>Name:</strong> <%= @user_detail.name %></p>
            <p><strong>Description:</strong> <%= @user_detail.description %></p>

            <p><strong>Posts:</strong> <%= @user_detail.posts.count %></p>
            <p><strong>Followers:</strong> <%= @user_detail.followers.count %></p>
            <p><strong>Following:</strong> <%= @user_detail.following.count %></p>
        </div>
    </body>
</html>
